<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/itemcolor">

    <com.xiaohu.fireworkssystem.view.MyTitleView
        android:id="@+id/seal_goods_list_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftimg="@mipmap/back"
        app:name="销售信息详情"></com.xiaohu.fireworkssystem.view.MyTitleView>

    <TextView
        android:id="@+id/text_title_hui"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_below="@+id/seal_goods_list_title"
        android:background="#eeeeee" />

    <TextView
        android:id="@+id/xian_1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/text_title_hui"
        android:background="@color/hui" />

    <TextView
        android:id="@+id/xian2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/seal_goods_ll"
        android:background="@color/hui" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/xian2"
        android:background="@color/hui"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/btn_go_goods_list"
            android:layout_width="wrap_content"
            android:layout_height="35dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:background="@drawable/login_button_background"
            android:onClick="onClick"
            android:text="订单产品详单"
            android:textColor="@color/white" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/seal_goods_ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/xian_1"
        android:orientation="vertical"
        android:padding="10dp"
        android:paddingBottom="100dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:background="@color/itemcolor">

            <ImageView
                android:id="@+id/imageView9"
                android:layout_width="20dp"
                android:layout_height="30dp"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/xiao_title" />

            <TextView
                android:id="@+id/textView_OrderID"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/textView_OrderTime"
                android:layout_marginLeft="10dp"
                android:layout_toEndOf="@+id/imageView9"
                android:layout_toRightOf="@+id/imageView9"
                android:paddingBottom="3dp"
                android:text="234234564654655"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_OrderTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="10dp"
                android:text="2016-08-03"
                android:textSize="14sp" />


        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line" />

        <LinearLayout
            android:id="@+id/ll_toal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="10dp">

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="150dp">

                <ImageView
                    android:id="@+id/seal_detail_header"
                    android:layout_width="100dp"
                    android:layout_height="150dp"
                    android:layout_margin="10dp"
                    android:onClick="onClick"
                    android:src="@mipmap/person_header" />

                <TextView
                    android:id="@+id/textView_appleyer"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="30dp"
                    android:layout_toRightOf="@+id/seal_detail_header"
                    android:text="购买人：张三"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/textView_nation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_appleyer"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/seal_detail_header"
                    android:text="民族：汉"
                    android:textColor="#000000" />

                <TextView
                    android:id="@+id/seal_detail_ap_cardtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/textView_nation"
                    android:layout_marginTop="20dp"
                    android:layout_toRightOf="@+id/seal_detail_header"
                    android:text="证件类型：身份证"
                    android:textColor="#000000" />
            </RelativeLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="0.3dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:background="@color/line" />

            <TextView
                android:id="@+id/textView_ApplyerCertNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="证件号码：130682199506083862"
                android:textColor="#000000"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/textView_ApplyerMobilePhone"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="联系方式：无"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_ApplyerAddress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="通讯地址：保定市莲池区"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_ranfang"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="燃放人员：无"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_PurposeName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="购买用途：无"
                android:textColor="#000000"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/textView_CreatTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="销售时间：无"
                android:textColor="#000000"
                android:textSize="14sp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView_UseTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="销售单位：零售点"
                android:textColor="#000000"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="0.3dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@color/line"
            android:layout_marginTop="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="总金额："
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_OrderAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="4543.00"
                android:textColor="#FF6D00"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="退货金额："
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_ReturnAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:text="45.00"
                android:textColor="#FF6D00"
                android:textSize="14sp"
                android:textStyle="bold" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="10dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="销售人："
                android:textColor="#000000"
                android:textSize="14sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/textView_OperatorName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="胡海珍"
                android:textSize="12sp"
                android:textStyle="bold" />

        </LinearLayout>

    </LinearLayout>


</RelativeLayout>