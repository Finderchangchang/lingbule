<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.xiaohu.fireworkssystem.ui.fragement.EmployeeFragment">

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/lv_fragmentEmployee"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@drawable/list_item_divider_salemanagement"
        android:dividerHeight="1dp"
        android:layout_above="@+id/layout_addemployee">


    </com.handmark.pulltorefresh.library.PullToRefreshListView>

    <LinearLayout
        android:id="@+id/layout_addemployee"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mainback"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#edbfad" />

        <ImageButton
            android:id="@+id/imageView_addEmployee"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/mainback"
            android:paddingTop="10dp"
            android:src="@mipmap/button_addemployee" />
    </LinearLayout>
