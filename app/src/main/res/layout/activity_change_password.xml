<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/hui"
    tools:context="com.xiaohu.fireworkssystem.ui.activity.ChangePasswordActivity">

    <com.xiaohu.fireworkssystem.view.MyTitleView
        android:id="@+id/change_password_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftimg="@mipmap/back"
        app:name="修改密码" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/change_password_title"
        android:background="@drawable/bg_white_fang"
        android:gravity="center"
        android:paddingBottom="30dp">

        <TextView
            android:id="@+id/textView47"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="20dp"
            android:text="    旧密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_oldpassword"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignEnd="@+id/textView"
            android:layout_alignRight="@+id/textView"
            android:layout_alignTop="@+id/textView47"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView47"
            android:background="@drawable/bg_white_fang"
            android:cursorVisible="true"
            android:ems="10"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/text_cursor" />

        <TextView
            android:id="@+id/textView48"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_oldpassword"
            android:layout_marginTop="31dp"
            android:cursorVisible="true"
            android:text="    新密码"
            android:textCursorDrawable="@drawable/text_cursor"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_newpassword1"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignLeft="@+id/editText_oldpassword"
            android:layout_alignStart="@+id/editText_oldpassword"
            android:layout_alignTop="@+id/textView48"
            android:background="@drawable/bg_white_fang"
            android:inputType="textPassword" />

        <TextView
            android:id="@+id/textView49"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/editText_newpassword1"
            android:layout_marginTop="36dp"
            android:text="确认密码"
            android:textSize="20sp" />

        <EditText
            android:id="@+id/editText_newpassword2"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_alignTop="@+id/textView49"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textView49"
            android:background="@drawable/bg_white_fang"
            android:cursorVisible="true"
            android:inputType="textPassword"
            android:textCursorDrawable="@drawable/text_cursor" />

        <Button
            android:id="@+id/button_save"
            android:layout_width="50dp"
            android:layout_height="30dp"
            android:layout_below="@+id/editText_newpassword2"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="26dp"
            android:layout_toEndOf="@+id/textView48"
            android:layout_toRightOf="@+id/textView48"
            android:background="@drawable/login_button_background"
            android:text="保存"
            android:textColor="@color/white" />
    </RelativeLayout>
</RelativeLayout>
