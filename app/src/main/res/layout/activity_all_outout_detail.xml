<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.xiaohu.fireworkssystem.ui.activity.AllOutoutDetailActivity">
    <com.xiaohu.fireworkssystem.view.MyTitleView
        android:id="@+id/alloutdetail_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:leftimg="@mipmap/back"
        app:name="待出库详情"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="8dp">
    </com.xiaohu.fireworkssystem.view.MyTitleView>

    <com.handmark.pulltorefresh.library.PullToRefreshListView
        android:id="@+id/alloutputdetail_lv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/textView_comname"
        android:layout_alignBottom="@+id/layout_inv"
        android:divider="@drawable/list_item_divider_salemanagement"
        android:dividerHeight="1dp"></com.handmark.pulltorefresh.library.PullToRefreshListView>
       <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#edbfad"
        android:layout_above="@+id/layout_inv"/>

    <LinearLayout
        android:id="@+id/layout_inv"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:layout_alignParentBottom="true"
        android:background="@color/mainback"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button_output"
            android:layout_width="100dp"
            android:layout_height="30dp"
            android:background="@drawable/login_button_background"
            android:textColor="@color/white"
            android:gravity="center"
            android:text="出库"/>
    </LinearLayout>
    <TextView
        android:id="@+id/textView_comname"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:layout_below="@+id/alloutdetail_title"
        android:text="待出库单位："
        android:textSize="18sp"
        android:gravity="center"
        android:textColor="@color/title"
        android:background="@color/mainback"/>
</RelativeLayout>
